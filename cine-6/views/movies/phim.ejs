    <div class="tab-content row my-1 mx-auto">
        <div id="p" class="tab-pane fade in active show col-lg-12 col-md-12 col-12 w-50 pt-5 pb-5">
            <div class="card-deck mx-auto">
                <div class="img col-lg-3 col-md-3 col-12 w-50 pt-5 pb-5">                                                
                    <img style="  object-fit: cover;"  class="img-fluid container" src="<%- foundPhim[0].Posterphim%>" alt="">                
                </div>
                <div class="text col-lg-9 col-md-9 col-12 w-50 pt-5 pb-5">
                    <div  class="row">
                        <div  class="input-group">
                            <div  class="input-group-prepend">
                                <span style="text-transform:uppercase;border-color:rgb(255, 231, 16);  background-color: rgb(255, 231, 16);" class="input-group-text">Cụm Rạp</span>
                                <select class="custom-select"  name="selectedname" id="selectedname">
                                    <option value="">----Chọn Cụm Rạp----</option>        
