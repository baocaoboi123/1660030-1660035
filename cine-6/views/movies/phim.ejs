                                        <%}else{%>
                                            <option value="<%- foundCumRap[key].IDcumrap%>"><%- foundCumRap[key].Tencumrap%></option>
                                        <%}                        
                                    }%>                                    
                                </select>                                
                            </div>                    
                        </div>
                    </div>
                    <div style="background-color: rgb(73, 71, 71);" class="row container d-flex">
                        <div class="nav nav-pills ml-auto p-1">
                            <span style="text-transform:uppercase;border-color:rgb(255, 231, 16);  background-color: rgb(255, 231, 16);" class="input-group-text">Thời gian suất chiếu</span>
