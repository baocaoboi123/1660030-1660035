            <main   class="m container">
            <% for(const key in list_phimdangchieu){%>
                <div class="phim ">                            
                    <ul class="caption-style-4">
                        <li>
                            <img src="<%- list_phimdangchieu[key].Posterphim %>" alt="">
                            <div class="caption">
                                <div class="blur"></div>
                                <div class="caption-text">
                                    <!-- <h5><%- list_phimdangchieu[key].Tenphim%></h5> -->
                                    <div>
                                        <!-- <button onclick="location.href='/phim/<%- list_phimdangchieu[key].Tenphim%>'"   style="cursor: pointer; background-color: yellow;  border-radius: 5px; border: none;">Xem Suất Chiếu</button> -->
                                        <button class="btn-5" onclick="location.href='/phimdangchieu/chitietphim/<%- list_phimdangchieu[key].Tenphim%>'"  style="background-color: rgb(207, 27, 27); height: 50px;  border-radius: 5px; border: none;">
                                            
                                        </button>  

                  
                                    </div>
                                    <button class="btntrailer" onclick="chitiettrailer('<%-list_phimdangchieu[key].Trailer%>')"  style="margin-top: 20px; background-color: grey; height: 50px;   border-radius: 5px; border: none;">
                                    </button>

                                </div>
                            </div>
                        </li>			
                    </ul>
                    
                    <div class="phim-info">
                            <p style="text-transform: capitalize;"><%- list_phimdangchieu[key].Tenphim%></p>
                    </div>                              
                </div>
                <br>
            <%}%>
            </main>
        </div> 
    </div>
</section>
<%- include('../partials/footer.ejs') %>





<div class="bg-modal" >
        <div style="background-color: whitesmoke;" class="modal-content ">             
            <div id="close" class="close">+</div>
            <div class="ui container">
                <iframe id="trailer" width="100%" height="405" src="">
                </iframe>
            </div>
        </div>
</div> 

<script>
    var chitiettrailer = function(trailer){
        document.querySelector('.bg-modal').style.display = 'flex';
        document.getElementById('trailer').src = trailer;
        $(window).scrollTop(0);
    }
    document.getElementById('close').addEventListener('click',
   function(){

       document.querySelector('.bg-modal').style.display = 'none';
   });
</script>




