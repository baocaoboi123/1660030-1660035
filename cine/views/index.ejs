<section id="spli" class="spli">            
    <div class="splide align-items-center container">         
        <div class="splide__track">
            <ul class="splide__list">
            <% for (const key in found_Phim){%>
                <li class="splide__slide "  > 
                    <div class="img ">
                        <ul class="caption-style-4">
                            <li>
                                <img src="<%- found_Phim[key].Posterphim %>" alt="">
                                <div class="caption">
                                    <div class="blur"></div>
                                    <div class="caption-text">
                                        <h1><%-found_Phim[key].Tenphim%></h1>
                                        <div>
                                            <button onclick="das('<%- found_Phim[key].Tenphim%>')"   style="cursor: pointer; background-color: lightseagreen;  border-radius: 5px; border: none;">Xem Suất Chiếu</button>            
                                        </div>
                                    </div>
                                </div>
                            </li>			
                        </ul>
                        <!-- <img  class="img-fluid w-100" src="<%-found_Phim[key].Posterphim%>" alt=""> -->
                    </div>
                </li>
            <%}%>
            </ul>
        </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/@splidejs/splide@2.4.21/dist/js/splide.min.js"></script>
    <script>
    var das = function(tenphim){
        location.href=`/phim/${tenphim}`;
    }
    var showLogin = function(){
        document.querySelector('.bg-modal1').style.display = 'flex';

    }
    var tatShowLogin = function(){
        document.querySelector('.bg-modal1').style.display = 'none';

    };


    new Splide( '.splide', {
    type        : 'loop',
    perPage     : 4,
    autoplay    : true,
    trimSpace: false,
    focus    : 'center',
    pauseOnHover: true,
    } ).mount();
    </script>
</section>


