             document.getElementById('ktdate1').value = kt;
             document.getElementById('denngay1').innerText = moment(document.getElementById("kt1").value).format("DD-MM-YYYY");

            };



            var thoatthongkecumrap = function(){
                document.querySelector('.bg-modal2').style.display = 'none';

