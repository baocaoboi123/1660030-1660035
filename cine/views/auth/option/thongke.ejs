<div class="bg-modal3">
    <div class="modal-content3"> 
                <div class="container">
                        <p>Thống Kê Phim Theo Ngày</p> 
                </div>           
                <form id="formphim" class="ui form" method="POST"   >
                    <div class="field">
                                                  
                        <span style="background-color: lightslategray; border: none;  " class="input-group-text">Từ Ngày:&nbsp;&nbsp; <p id="tungay"></p></span>
                        <input onchange="getEventTimeBD()"  type="date" id="bd" > 
