<script>
           var getEventTimeBD = function(){
             
             var bd = moment(document.getElementById("bd").value).format("YYYY-MM-DD");
             document.getElementById('bddate').value = bd;
             document.getElementById('tungay').innerText = moment(document.getElementById("bd").value).format("DD-MM-YYYY");

            };
            var getEventTimeKT = function(){
             
             var kt = moment(document.getElementById("kt").value).format("YYYY-MM-DD");
             document.getElementById('ktdate').value = kt;
             document.getElementById('denngay').innerText = moment(document.getElementById("kt").value).format("DD-MM-YYYY");

            };



            var thoatthongkephim = function(){
                document.querySelector('.bg-modal3').style.display = 'none';

            };

            function thongkephim(){
                document.querySelector('.bg-modal3').style.display = 'flex';

                // $(window).scrollTop(0);

            };

             var getEventTimeBD1 = function(){
             
             var bd = moment(document.getElementById("bd1").value).format("YYYY-MM-DD");
             document.getElementById('bddate1').value = bd;
